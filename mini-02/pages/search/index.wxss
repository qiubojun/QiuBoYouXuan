page {
  background-color: #dedede;
  padding: 20rpx;
}
.search_row {
  height: 60rpx;
  /*父；伸缩盒子*/
  display: flex;
}
.search_row input {
  background-color: #fff;
  /*子类：占一份*/
  flex: 1;
  height: 100%;
  padding-left: 30rpx;
}
.search_row button {
  width: 110rpx;
  height: 100%;
  padding: 0;
  margin: 0 10rpx;
  /*伸缩盒子*/
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
}
.search_content {
  /*上外边距：*/
  margin-top: 30rpx;
}
.search_content .search_item {
  background-color: #fff;
  font-size: 26rpx;
  padding: 15rpx 10rpx;
  border-bottom: 1rpx solid #ccc;
  /*溢出：隐藏*/
  overflow: hidden;
  /*空格：不换行*/
  white-space: nowrap;
  /*文字溢出：省略号*/
  text-overflow: ellipsis;
}
